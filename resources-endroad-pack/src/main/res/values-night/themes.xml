<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="ThemeEndroad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="splash_background">@color/darker_gray</item>

		<item name="colorOnPrimary">@color/white</item>
		<item name="colorSecondary">@color/yellow_200</item>
		<item name="colorSecondaryVariant">@color/yellow_200</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="toolbar_color">@color/darker_gray</item>
	</style>

	<style name="ThemeEndroad.Application">
		<item name="colorPrimary">@color/blue_200</item>
		<item name="colorPrimaryVariant">@color/blue_700</item>
	</style>

	<style name="ThemeEndroad.Libraries">
		<item name="colorPrimary">@color/orange_200</item>
		<item name="colorPrimaryVariant">@color/orange_700</item>
	</style>

	<style name="ThemeEndroad.Sample">
		<item name="colorPrimary">@color/green_200</item>
		<item name="colorPrimaryVariant">@color/green_700</item>
	</style>

	<style name="ThemeEndroad.Testing">
		<item name="colorPrimary">@color/red_200</item>
		<item name="colorPrimaryVariant">@color/red_700</item>
	</style>

	<style name="ThemeEndroad.Application.Splash">
		<item name="android:windowBackground">@drawable/background_splash_application</item>
	</style>

	<style name="ThemeEndroad.Libraries.Splash">
		<item name="android:windowBackground">@drawable/background_splash_libraries</item>
	</style>

	<style name="ThemeEndroad.Sample.Splash">
		<item name="android:windowBackground">@drawable/background_splash_sample</item>
	</style>

	<style name="ThemeEndroad.Testing.Splash">
		<item name="android:windowBackground">@drawable/background_splash_testing</item>
	</style>

</resources>